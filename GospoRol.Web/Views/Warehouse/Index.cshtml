@model GospoRol.Application.ViewModels.PlaceViewModels.WarehouseViewModels.ListWarehouseForListVm

@{
    ViewData["Title"] = "Twoje Magazyny";

    int countProducts;
}

<h1>Twoje Magazyny</h1>

<p>
    <a asp-action="AddWarehouse">Dodaj Magazyn</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Warehouses[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouses[0].Acreage)
            </th>
            <th>
                Ilość Produktów
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Warehouses)
        {
            countProducts = item.Seeds.Count + item.Yields.Count+item.Pesticides.Count+item.Fertilizers.Count;
            item.CountProducts = countProducts;
        <tr>
            <td hidden="">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acreage)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.CountProducts)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "EditWarehouse", new {item.Id }) |
                @Html.ActionLink("Szczegoły", "DetailsWarehouse", new { item.Id }) |
                @Html.ActionLink("Usuń", "DeleteWarehouse", new { item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
