@model GospoRol.Application.ViewModels.PlaceViewModels.WarehouseViewModels.NewWarehouseVm

@{
    ViewData["Title"] = "Edycja Magazynu";
}

<h1>Edycja Magazynu</h1>

<h4>Edytuj Magazyn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditWarehouse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden"asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acreage" class="control-label"></label>
                <input asp-for="Acreage" class="form-control" />
                <span asp-validation-for="Acreage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróc</a>
</div>

