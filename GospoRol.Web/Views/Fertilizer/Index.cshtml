@model GospoRol.Application.ViewModels.ProductsViewsModels.FertilizerViewModels.ListFertilizerForListVm

@{
    ViewData["Title"] = "Twoje Nawozy";
}

<h1>Twoje Nawozy</h1>

<p>
    <a asp-action="AddFertilizer">Dodaj Nowy Nawóz</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].TypeFertilizer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].Warehouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].FertilizerComposition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].Concentration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].CurrentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fertilizers[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Fertilizers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeFertilizer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FertilizerComposition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concentration)%
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
                @Html.DisplayFor(modelItem => item.FertilizerUnit)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentAmount)
                @Html.DisplayFor(modelItem => item.FertilizerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)zł
            </td>
            <td>
                @Html.ActionLink("Edit", "EditFertilizer", new {/* id=item.PrimaryKey */}) |
                @Html.ActionLink("Details", "DetailsFertilizer", new {/* id=item.PrimaryKey */}) |
                @Html.ActionLink("Delete", "DeleteFertilizer", new {/* id=item.PrimaryKey */})
            </td>
        </tr>
}
    </tbody>
</table>
