@model GospoRol.Application.ViewModels.PlaceViewModels.FieldViewModels.NewFieldVm
@{

    ViewData["Title"] = "Dodawanie Pola";
}

<h1>Dodawanie Nowego Pola</h1>

<h4>Dodaj Pole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddField">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LandId" class="control-label"></label><br/>
                <select asp-for="LandId" asp-items="@Model.Lands"></select>
            </div>
            <div class="form-group">
                <label>Klasa Gleby</label><br />
                <select asp-for="AgriculturalClassId" asp-items="@Model.AgriculturalClasses"></select>
            </div>
            <div class="form-group">
                <label asp-for="FieldName" class="control-label"></label>
                <input asp-for="FieldName" class="form-control" />
                <span asp-validation-for="FieldName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acreage" class="control-label"></label>
                <input asp-for="Acreage" class="form-control" />
                <span asp-validation-for="Acreage" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="CultivatedPlant" class="control-label"></label>
                <input asp-for="CultivatedPlant" class="form-control" />
                <span asp-validation-for="CultivatedPlant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Variety" class="control-label"></label>
                <input asp-for="Variety" class="form-control" />
                <span asp-validation-for="Variety" class="text-danger"></span>
            </div>*@


            <div class="form-group">
                <input type="submit" value="Dodaj Pole" class="btn btn-primary" />              
                <a asp-action="Index">Wróć</a>               
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
