@model GospoRol.Application.ViewModels.NewLandVm
 
@{
    ViewData["Title"] = "EditLand";
}

<h1>EditLand</h1>

<h4>NewLandVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlotNumber" class="control-label"></label>
                <input asp-for="PlotNumber" class="form-control" />
