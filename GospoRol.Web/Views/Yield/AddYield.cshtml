@using GospoRol.Domain.Models.Products
@model GospoRol.Application.ViewModels.ProductsViewsModels.YieldViewModels.NewYieldVm

@{
    ViewData["Title"] = "Nowy Plon Rolny";
}

<h1>Dodaj Nowy Plon Roly</h1>

<h4>Plon Rolny</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddYield">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden="" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="WarehouseId" class="control-label"></label><br>
                <select asp-for="WarehouseId" asp-items="@Model.Warehouses"></select>
            </div>
            <div class="form-group">
                <label asp-for="NamePlant" class="control-label"></label>
                <input asp-for="NamePlant" class="form-control" />
                <span asp-validation-for="NamePlant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlantVariety" class="control-label"></label>
                <input asp-for="PlantVariety" class="form-control" />
                <span asp-validation-for="PlantVariety" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YieldUnit" class="control-label"></label>
                <select asp-for="YieldUnit" class="form-control" asp-items="@Html.GetEnumSelectList<YieldUnit>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInformation" class="control-label"></label>
                <textarea asp-for="AdditionalInformation" class="form-control" ></textarea>
                <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróc</a>
</div>

